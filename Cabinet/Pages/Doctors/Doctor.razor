@page "/doctors"
@layout MainLayout
@inherits DoctorComponent
@using Radzen
@inject Microsoft.Extensions.Localization.IStringLocalizer<BasePage> L
<PageTitle>Doctors</PageTitle>

<RadzenContent Container="main">
    <ChildContent>
        <RadzenHeading Size="H1" Text="@L["Statuts d'établissement"]">
        </RadzenHeading>
        <div class="row">
            <div class="col-md-12">
                <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="@L["Ajouter"]" Click="@Ajouter">
                </RadzenButton>
                <RadzenDataGrid EmptyText="Aucune donnée."  FilterMode="Radzen.FilterMode.Simple" AllowPaging="true" AllowFiltering="true" AllowSorting="true" Data="@Doctors" TItem="Cabinet.Models.Doctor">
                    <Columns>
                        <RadzenDataGridColumn TItem="Cabinet.Models.Doctor" Property="FullName">
                            <Template Context="DocContext">
                                <img src="@DocContext.Photo"   width="60" style="border-radius:50%"/>
                                <span>@DocContext.FullName</span>
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Cabinet.Models.Doctor" Property="Specialite" Title="@L["Specialites"]">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Cabinet.Models.Doctor" Property="PhoneNumber" Title="@L["PhoneNumber"]">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Cabinet.Models.Doctor" Filterable="false" Sortable="false" Width="120px" TextAlign="TextAlign.Center">
                            <Template Context="modCoModelsModCoDataType">
                                <RadzenButton ButtonStyle="Radzen.ButtonStyle.Primary" Icon="edit" Size="ButtonSize.Medium" Click="@((args) =>Edit(modCoModelsModCoDataType))" @onclick:stopPropagation="true">
                                </RadzenButton>
                                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium" Click="@((args) =>Delete(args, modCoModelsModCoDataType))" @onclick:stopPropagation="true">
                                </RadzenButton>
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
            </div>
        </div>
    </ChildContent>
</RadzenContent>

    