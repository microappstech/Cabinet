@page "/Editdoctor"
@inherits EditDoctorComponent
@using Radzen
@inject Microsoft.Extensions.Localization.IStringLocalizer<BasePage> L

<RadzenContent Container="main">
    <ChildContent>
        <div class="row">
            <div class="col-md-12">
                <RadzenTemplateForm Data="@doctor" Visible="@(doctor != null)" TItem="Models.Doctor" Submit="@Submit">
                    <ChildContent>
                        <div style="margin-bottom: 1rem" class="row">
                            <div class="col-md-3">
                                <RadzenLabel Text="@L["Nom"]" Component="nom" style="width: 100%">
                                </RadzenLabel>
                            </div>
                            <div class="col-md-9">
                                <RadzenTextBox MaxLength="255" style="display: block; width: 100%" @bind-Value="@(doctor.FullName)" Name="Nom">
                                </RadzenTextBox>
                                <RadzenRequiredValidator Component="Nom" Text="@L["Le nom est requis"]" style="position: absolute">
                                </RadzenRequiredValidator>
                            </div>
                        </div>
                        <div style="margin-bottom: 1rem" class="row">
                            <div class="col-md-3">
                                <RadzenLabel Text="@L["Specialité"]" Component="nom" style="width: 100%">
                                </RadzenLabel>
                            </div>
                            <div class="col-md-9">
                                <RadzenTextBox MaxLength="255" style="display: block; width: 100%" @bind-Value="@(doctor.Specialite)" Name="Spe">
                                </RadzenTextBox>
                                <RadzenRequiredValidator Component="Spe" Text="@L["La spécalté est requise"]" style="position: absolute">
                                </RadzenRequiredValidator>
                            </div>
                        </div>
                        <div style="margin-bottom: 1rem" class="row">
                            <div class="col-md-3">
                                <RadzenLabel Text="@L["Numero de telophone"]" Component="phone" style="width: 100%">
                                </RadzenLabel>
                            </div>
                            <div class="col-md-9">
                                <RadzenTextBox MaxLength="255" style="display: block; width: 100%" @bind-Value="@(doctor.PhoneNumber)" Name="phone">
                                </RadzenTextBox>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col offset-sm-3">
                                <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="@L["Submit"]" ButtonStyle="ButtonStyle.Primary">
                                </RadzenButton>
                                <RadzenButton ButtonStyle="ButtonStyle.Light" style="margin-left: 1rem" Text="@L["Annuler"]" Click="@(()=>DialogService.Close())">
                                </RadzenButton>
                            </div>
                        </div>
                    </ChildContent>
                </RadzenTemplateForm>
            </div>
        </div>
    </ChildContent>
</RadzenContent>
