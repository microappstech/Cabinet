@page "/add-application-role"
@layout MainLayout
@inherits AddRoleComponent

@using Radzen
@using Radzen.Blazor
@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore.Authorization
@* @attribute [Authorize(Roles = "admin, ADMMODCO")] *@
@inject Microsoft.Extensions.Localization.IStringLocalizer<BasePage> L
<PageTitle>Add Application Role</PageTitle>
<RadzenContent Container="main">
    <ChildContent>
        <div class="row">
            <div class="col-md-12">
                <RadzenTemplateForm TItem="IdentityRole" Data="@role" Visible="@(role != null)" Submit="@Form0Submit">
                    <ChildContent>
                        <div style="margin-bottom: 1rem" class="row">
                            <div class="col-md-3">
                                <RadzenLabel Component="Name" style="width: 100%" Text="@L["Nom"]">
                                </RadzenLabel>
                            </div>
                            <div class="col-md-9">
                                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(role.Name)" Name="Name">
                                </RadzenTextBox>
                                <RadzenRequiredValidator Component="Name" style="position: absolute" Text="@L["Nom est requis"]">
                                </RadzenRequiredValidator>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col offset-sm-3">
                                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="@L["Save"]">
                                </RadzenButton>
                                <RadzenButton ButtonStyle="ButtonStyle.Light" Text="@L["Cancel"]" Click="@Close">
                                </RadzenButton>
                            </div>
                        </div>
                    </ChildContent>
                </RadzenTemplateForm>
            </div>
        </div>
    </ChildContent>
</RadzenContent>
