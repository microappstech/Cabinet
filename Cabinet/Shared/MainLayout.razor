@inherits MainLayoutComponent
@using Radzen
@using Radzen.Blazor
@using Microsoft.AspNetCore.Identity;
@using Cabinet.Pages
@inject Microsoft.Extensions.Localization.IStringLocalizer<BasePage> L

<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<AuthorizeView Context="AuthorizationContext">
    <NotAuthorized>
        <RedirectToLogin IsAuthenticated="@AuthorizationContext.User.Identity.IsAuthenticated"/>
    </NotAuthorized>
    <Authorized>
        <RadzenLayout>
            <ChildContent>
                <RadzenHeader>
                    <ChildContent>
                        <div class="row">
                            <div class="col-12 d-flex align-items-center">
                                <RadzenSidebarToggle Click="@SidebarToggle0Click" Visible="@Security.IsInRole(new string[]{"ADMIN"})" Style="border:none;">
                                </RadzenSidebarToggle>
                                <RadzenImage Path="Modco3.png" Style="width:115px; height:auto;" class="@(Security.IsInRole(new string[]{"ADMIN"}) ? "" : "ml-4")"></RadzenImage>
                                <div style="flex-grow: 1"></div>
                                <div class="d-flex align-items-center" style="position: relative">
                                    
                                        <div style="width: 25px; height: 25px; border-radius: 100%; background-image: url(@(Security.User.Photo)); background-size: cover; background-size: 25px;">
                                        </div>
                                    
                                        <RadzenIcon Icon="account_circle"></RadzenIcon>
                                    
                                    <div class="rounded-circle" style="background-color: @(AuthorizationContext.User.Identity.IsAuthenticated == true ? "var(--success)" : "var(--danger)"); height: 10px; width: 10px; position: absolute; top: -2px; right: -2px;"></div>
                                </div>
                                <RadzenMenu class="mr-4" Responsive="false">
                                    <RadzenMenuItem Text="@(Security?.User?.FullName )">
                                        <RadzenMenuItem Text="@L["Déconnexion"]" Icon="power_settings_new" Click="@((args) =>logout())" Style="min-width: 150px"></RadzenMenuItem>
                                    </RadzenMenuItem>
                                </RadzenMenu>

                            </div>
                        </div>
                    </ChildContent>
                </RadzenHeader>
                <RadzenBody @ref="body0">
                    <ChildContent>
                        <RadzenContentContainer Name="main">

                            @Body
                        </RadzenContentContainer>
                    </ChildContent>
                </RadzenBody>
                <RadzenSidebar @ref="sidebar0" Visible="true">
                    <ChildContent>
                        <RadzenPanelMenu style="height: 100%">
                            <ChildContent>

                                <RadzenPanelMenuItem Text="@L["Dashboard"]" Path="dashboard" Visible="true" Selected="true">
                                </RadzenPanelMenuItem>

                                <RadzenPanelMenuItem Text="@L["Doctors"]" Path="doctors" Visible="true"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="@L["Infirmers"]" Path="infirmiers" Visible="true"></RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="@L["Roles"]" Path="roles" Visible="true"></RadzenPanelMenuItem>

                                <RadzenPanelMenuItem Text="@L["Tableau de board"]" Path="dashboard" Visible="@Security.IsInRole(new string[]{"ADMMODCO"})" >
                                </RadzenPanelMenuItem>

                                <RadzenPanelMenuItem Text="@L["Etablissements"]" Path="etablissements" Visible="@Security.IsInRole(new string[]{"ADMMODCO"})" >
                                </RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="Classes" Path="classes" Visible="@Security.IsInRole(new string[]{"ADMMODCO"})">
                                </RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="@L["Elèves"]" Path="eleves" Visible="@Security.IsInRole(new string[]{"ADMMODCO"})">
                                </RadzenPanelMenuItem>
                                <RadzenPanelMenuItem Text="@L["Enseignants"]" Path="enseignants" Visible="@Security.IsInRole(new string[]{"ADMMODCO"})">
                                </RadzenPanelMenuItem>


                            </ChildContent>
                        </RadzenPanelMenu>
                    </ChildContent>
                </RadzenSidebar>
                <RadzenFooter>
                    <ChildContent>

                        <RadzenLabel Text="@L["footerText.Text"]">

                        </RadzenLabel>   &nbsp  &nbsp  <NavLink href="/politique-de-confidentialite/web">@L["Politique de confidentialité"]</NavLink>
                        &nbsp  &nbsp  <NavLink href="/mentions-legales">@L["Mentions légales"]</NavLink>

                    </ChildContent>
                </RadzenFooter>
            </ChildContent>
        </RadzenLayout>

    </Authorized>
</AuthorizeView>



